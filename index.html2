<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Virtual School Demo</title>
  <style>
    body { font-family: system-ui, Arial, sans-serif; margin: 40px; }
    main { max-width: 780px; margin: auto; }
  </style>
</head>
<body>
  <main>
    <h1>Virtual School Demo</h1>
    <p>Test the EduSmartBot on this page.</p>
  </main>

  <!-- Chatbase widget -->
  <script>
    window.chatbaseConfig = { chatbotId: "RgdDO75wAMoac8nN5ppn9" };
  </script>
  <script src="https://www.chatbase.co/embed.min.js" defer></script>

  <!-- SAFE schema loader: waits for registerFormSchema -->
  <script>
    (function registerWhenReady(actionName, schemaFactory) {
      function tryRegister() {
        if (window.chatbase && typeof window.chatbase.registerFormSchema === 'function') {
          window.chatbase.registerFormSchema({ [actionName]: schemaFactory });
        } else {
          setTimeout(tryRegister, 100);
        }
      }
      tryRegister();
    })('Lead_Collect', async (args, user) => {
      return {
        fields: [
          { name: "parent_name", label: "Parent’s full name", type: "text",
            placeholder: "Enter your full name",
            validation: { required: { value: true, message: "Name is required" } } },
          { name: "email", label: "Email", type: "text",
            placeholder: "Enter your email",
            validation: { required: { value: true, message: "Email is required" } } },
          { name: "phone", label: "Phone", type: "text",
            placeholder: "Enter phone in international format, e.g., +92XXXXXXXXXX",
            validation: { required: { value: true, message: "Phone is required" } } },
          { name: "country", label: "Country (optional)", type: "text",
            placeholder: "2-letter code (e.g., PK, FR)" }
        ],
        submitButtonText: "Send",
        successMessage: "Thanks! We’ll get back to you soon.",
        errorMessage: "Something went wrong. Please try again."
      };
    });
  </script>
</body>
</html>
